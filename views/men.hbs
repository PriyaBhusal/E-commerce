{{>header}}
{{>navbar}}
<div class="men">
<p class="men1"><u>BROWSE ALL PRODUCT FOR MEN</u> </p>
</div>

<div class="hero">
    <h4>Trade-in-offer</h4>
    <h2>Super value deals</h2>
    <h1>On all products</h1>
    <p>Save ur money on the sales</p>
    <button>Shop Now</button>
</div>

   <section class="product">
      <h2 class="product-category">Shirt <span>Collection</span></h2>
      {{!-- <button class="nxt-btn"><i class="fa-solid fa-arrow-left"></i></button> --}}
       <button class="pre-btn"><i class="fa-solid fa-arrow-right"></i></button>
      <button class="nxt-btn"><i class="fa-solid fa-arrow-right"></i></button>
      
     
      <div class="product-container">
        
         {{#each data.shirtResult}}

         <div class="product-card">
            <div class="product-image">
               <span class="discount-tag">{{this.discountTag}}</span>
               <img src={{this.imageUrl}} class="product-thumb" alt="">
            </div>
            <div class="product-info">
               <h2 class="product-brand">{{this.brand}}</h2>
               <p class="product-short-description">{{this.description}}</p>
               <span class="price">{{this.discountedPrice}}</span>
               <span class="actual-price">{{this.actualPrice}}</span>
               <button onclick="addToFavorites('{{this.imageUrl}}','{{this.brand}}','{{this.description}}','{{this.discountedPrice}}')"><a href="#"><i class="fa-regular fa-heart" style="color: black;"></i></a></button>
               <button onclick="addToCart('{{this.imageUrl}}','{{this.brand}}','{{this.description}}','{{this.discountedPrice}}')"><a href="#"><i class="fa-solid fa-cart-shopping" style="color: black;"></i></a></button>
            </div>
         </div>
            {{/each}}
   </div>
   </section> 



